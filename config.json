{
    "basics": {
        "title": "Sample App",
        "source_dir": "src",
        "verbose": true,
        "requirements_file": "src/requirements.txt",
        "install_path": "/opt/sample_app",
        "add_to_path": false
    },

    "systemd_service": {
        "enable": false,
        "unit_file": "src/deploy/sample_app.service"
    },

    "archive": {
        "filename": "sample_app",
        "format": "zip"
    },

    "post_install_script": {
        "enable": false,
        "script_file": "src/deploy/post_install.py"
    }
}
